<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <dk.aau.cs.giraf.train.opengl.GlView
            android:id="@+id/openglview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Cart1 -->

    <LinearLayout
        android:id="@+id/Cart1LinearLayout"
        android:layout_width="310dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="70dp"
        android:orientation="horizontal" >

        <!-- Cart1Left -->

        <FrameLayout
            android:id="@+id/Cart1LeftLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:tag="filled" >

            <ImageView
                android:id="@+id/Cart1LeftImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/nej" >
            </ImageView>
        </FrameLayout>

        <!-- Cart1Right -->

        <FrameLayout
            android:id="@+id/Cart1RightLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:tag="filled" >

            <ImageView
                android:id="@+id/Cart1RightImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bade" >
            </ImageView>
        </FrameLayout>
    </LinearLayout>

    <!-- Cart2 -->

    <LinearLayout
        android:id="@+id/Cart2LinearLayout"
        android:layout_width="310dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@id/Cart1LinearLayout"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/Cart1LinearLayout"
        android:orientation="horizontal" >

        <!-- Cart2Left -->

        <FrameLayout
            android:id="@+id/Cart2LeftLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:tag="filled" >

            <ImageView
                android:id="@+id/Cart2LeftImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/se" >
            </ImageView>
        </FrameLayout>

        <!-- Cart2Right -->

        <FrameLayout
            android:id="@+id/Cart2RightLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:tag="filled" >

            <ImageView
                android:id="@+id/Cart2RightImageView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/mig" >
            </ImageView>
        </FrameLayout>
    </LinearLayout>

    <!-- TrainStation -->

    <LinearLayout
        android:id="@+id/StationLeftLinearLayout"
        android:layout_width="310dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal" >

        <!-- Spot1 -->

        <FrameLayout
            android:id="@+id/Spot1LeftLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/Spot1LeftImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ImageView>
        </FrameLayout>
        <!-- Spot2 -->

        <FrameLayout
            android:id="@+id/Spot2RightLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/Spot2RightImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ImageView>
        </FrameLayout>
    </LinearLayout>

    <!-- StationRight -->

    <LinearLayout
        android:id="@+id/StationRightLinearLayout"
        android:layout_width="310dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@id/StationLeftLinearLayout"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/StationLeftLinearLayout"
        android:orientation="horizontal" >

        <!-- Spot3 -->

        <FrameLayout
            android:id="@+id/Spot3LeftLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/Spot3LeftImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ImageView>
        </FrameLayout>
        <!-- Spot4 -->

        <FrameLayout
            android:id="@+id/Spot4RightLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/Spot4RightImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ImageView>
        </FrameLayout>
    </LinearLayout>

    <!-- TrainDriver -->

    <LinearLayout
        android:id="@+id/TrainDriverLinearLayout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@id/Cart2LinearLayout"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/Cart2LinearLayout"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/TrainDriverLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/TrainDriverImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ImageView>
        </FrameLayout>
    </LinearLayout>

    <!-- StationCategory -->

    <LinearLayout
        android:id="@+id/StationCategoryLinearLayout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="270dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/StationCategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape" >

            <ImageView
                android:id="@+id/StationCategoryImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ImageView>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>