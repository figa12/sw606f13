<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="-16dp"
        android:layout_weight=".2"
        android:gravity="center" >

        <dk.aau.cs.giraf.train.profile.PictogramButton
            android:id="@+id/list_category"
            android:layout_width="75dp"
            android:layout_height="75dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" >
    </LinearLayout>

    
    <dk.aau.cs.giraf.train.profile.AssociatedPictogramsLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left" >

        <ImageButton
            android:id="@+id/addPictogramButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/add_pictogram"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".8"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/deleteRowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/delete_row"
            android:src="@android:drawable/ic_delete" />
    </LinearLayout>

</LinearLayout>