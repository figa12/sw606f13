<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
    <shape>
            <gradient 
    		android:startColor="#FF7CADF8"
    		android:endColor="#FF91BDF2"
    		android:angle="-90"
    		/>
            <stroke android:width="3px" android:color="#FF5F91BE" 
            />
            <corners android:radius="10dp" 
            />
            <padding
			android:left="20dp"
			android:top="10dp"
			android:right="20dp"
			android:bottom="10dp"
     	   />
        </shape>
    </item>
    <item android:state_selected="true" android:drawable="@drawable/list_selected"/>
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
		<shape>
            <gradient 
    		android:startColor="#FFF3F5F8"
    		android:endColor="#FFE9EDF2"
    		android:angle="-90"
    		/>
            <stroke android:width="3px" android:color="#FF9CAEBE" 
            />
            <corners android:radius="10dp" 
            />
            <padding
			android:left="20dp"
			android:top="10dp"
			android:right="20dp"
			android:bottom="10dp"
     	   />
        </shape>
	</item>
</selector>