<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.aau.cs.giraf.train"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="15" />

    <uses-feature 
        android:glEsVersion="0x00020000" 
        android:required="true"/>
    
    <!-- For tablet use only -->
     <supports-screens android:smallScreens="false"
                      android:normalScreens="false"
                      android:largeScreens="true"
                      android:xlargeScreens="true"
                      android:requiresSmallestWidthDp="600" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_train_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <activity
            android:name="dk.aau.cs.giraf.train.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dk.aau.cs.giraf.train.opengl.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="dk.aau.cs.giraf.train.MainActivity" 
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dk.aau.cs.giraf.train.MainActivity" />
        </activity>
        <activity
            android:name="dk.aau.cs.giraf.train.profile.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName="dk.aau.cs.giraf.train.MainActivity" 
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dk.aau.cs.giraf.train.MainActivity" />
        </activity>
    </application>

</manifest>
